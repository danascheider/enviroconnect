<%- model_class = Organization -%>
<div class="page-header">
  <h1><%=t '.title', :default => @organization.name %></h1>
</div>

<dl class="dl-horizontal">
  <% if @organization.mission && !@organization.mission.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:mission) %>:</strong></dt>
    <dd><%= @organization.mission %></dd>
  <% end %>
  <% if !@organization.phone.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
    <dd><%= @organization.phone %></dd>
  <% end %>
  <% if @organization.fax && !@organization.fax.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
    <dd><%= @organization.fax %></dd>
  <% end %>
  <% if @organization.email && !@organization.email.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @organization.email %></dd>
  <% end %>
  <% if @organization.type && !@organization.type.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
    <dd><%= @organization.type == 'NonprofitOrganization' ? 'Nonprofit Organization' : @organization.type%></dd>
  <% end %>
  <% if @organization.address_1 && !@organization.address_1.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:address_1) %>:</strong></dt>
    <dd><%= @organization.address_1 %></dd>
  <% end %>
  <% if @organization.address_2 && !@organization.address_2.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:address_2) %>:</strong></dt>
    <dd><%= @organization.address_2 %></dd>
  <% end %>
  <% if @organization.city && !@organization.city.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
    <dd><%= @organization.city %></dd>
  <% end %>
  <% if @organization.state && !@organization.state.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
    <dd><%= @organization.state %></dd>
  <% end %>
  <% if @organization.zip && !@organization.zip.try(:empty?) %>
    <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
    <dd><%= @organization.zip %></dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              organizations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_path(@organization), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_path(@organization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
