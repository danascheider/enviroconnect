<div id='wrapper'>
  <header class="navbar navbar-default navbar-fixed-top"></header>

  <div class='container'>
  <%- model_class = Organization -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:mission) %></th>
          <th><%= model_class.human_attribute_name(:type) %></th>
          <th><%= model_class.human_attribute_name(:phone) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @organizations.each do |organization| %>
          <tr>
            <td><%= link_to organization.id, organization_path(organization) %></td>
            <td><%= organization.name %></td>
            <td><%= organization.mission %></td>
            <td><%= organization.type %></td>
            <td><%= organization.phone %></td>
            <td><%= organization.address_1 %></td>
            <td><%= organization.address_2 %></td>
            <td><%= organization.city %></td>
            <td><%= organization.state %></td>
            <td><%= organization.zip %></td>
            <td><%= organization.email %></td>
            <td><%= organization.fax %></td>
            <td><%=l organization.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_organization_path(organization), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          organization_path(organization),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_organization_path,
                :class => 'btn btn-primary' %>
  </div>
</div>