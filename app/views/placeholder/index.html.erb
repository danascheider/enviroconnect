<!-- ///  begin promo  /// -->
<div class="promo" id="home">
  <!-- ///  semitransparent layer  /// -->
  <div class="color-correction"></div> 
  <!-- ///  begin entry  /// -->         
  <div class="container">
    <div class="row">
      <!-- ///  begin text section  /// -->
      <div class="col-md-6 wow fadeInUp" data-wow-duration="2s">
        <div class="promo-text">
          <div><%= image_tag 'logoWhite' class: 'logo' %></div>
          <hr>                  
          <p class="lead">InviroConnect exists to orchestrate environmental initiatives through
          technology, acting as a hub for collaborative actions between individuals, nonprofits, businesses, and government. Fill out the form to learn more!</p>
        </div>
      </div>
      <!-- ///  end text section  /// -->
      <!-- ///  begin registration form  /// -->
      <div class="col-md-4 col-md-offset-2 wow fadeInDown" data-wow-duration="2s">
        <div class="register">
          <form role="form" method="POST" id="registrationForm">
            <div class="form-group">                      
              <input type="text" id="regName" name="name" data-validation="length" data-validation-length="min4" class="form-control input-lg" placeholder="Name">
            </div>
            <div class="form-group">                      
              <input type="email" id="regMail" name="email" data-validation="email" class="form-control input-lg" placeholder="Email">
            </div>
            <div class="form-group">                      
              <select id="regPlan" data-validation="required" class="form-control btn-group-lg selectpicker" name="profile" data-style="btn-empty">
                <option value="" disabled selected>Profile</option>
                <option value="individual">Individual</option>
                <option value="nonprofit">Nonprofit organization</option>
                <option value="government">Government agency</option>
                <option value="business">Business</option>
              </select>
            </div> 
            <div class="form-group">                      
              <input type="textarea" id="notes" name="notes" class="form-control input-lg" placeholder="Comments">
            </div>
            <button type="submit" class="btn btn-empty btn-block btn-lg">Submit</button>
          </form>
          <div class="ok">
            <p class="icon"><i class="fa-check-circle-o fa fa-5x success-color"></i></p>
            <h3>Thanks!</h3>
            <p class="lead">We'll get back to you when more information is available!</p>
            <button type="button" class="btn btn-warning" id="back">Back</button>
          </div>
        </div>
      </div>
      <!-- ///  end registration form  /// -->
    </div>            
  </div>
  <!-- ///  end entry  /// -->
</div>       
<!-- ///  end promo  /// --> 

